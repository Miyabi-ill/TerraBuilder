<UserControl x:Class="TUBGWorldGenerator.Views.WorldViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TUBGWorldGenerator.Views"
			 xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<xctk:Zoombox x:Name="ZoomControl" RenderOptions.BitmapScalingMode="NearestNeighbor" RelativeZoomModifiers="None" DragModifiers="None" CurrentViewChanged="ZoomControl_CurrentViewChanged">
			<Grid>
			    <Image x:Name="WorldMapImage"></Image>
				<Canvas Width="{Binding ActualWidth, ElementName=WorldMapImage}" Height="{Binding ActualHeight, ElementName=WorldMapImage}" Panel.ZIndex="1">
					<Image x:Name="DetailImage"></Image>
				</Canvas>
			</Grid>
		</xctk:Zoombox>
    </Grid>
</UserControl>
